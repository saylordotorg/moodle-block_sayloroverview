{{!
    @template block_myoverview/courses-view

    This template renders the courses view for the myoverview block.

    Example context (json):
    {}
}}
<div id="courses-view-{{uniqid}}" data-region="courses-view">
    {{#hascourses}}
    <div class="d-flex justify-content-center">
        <ul class="nav nav-pills mt-1 mb-3 d-flex-row justify-content-center">
            <li class="nav-item flex-item">
                <a class="nav-link sayloroverview-pill active" href="#myoverview_courses_view_in_progress" data-toggle="tab">
                    {{#str}} inprogress, block_sayloroverview {{/str}}
                </a>
            </li>
            <li class="nav-item flex-item">
                <a class="nav-link sayloroverview-pill" href="#myoverview_courses_view_past" data-toggle="tab">
                    {{#str}} past, block_sayloroverview {{/str}}
                </a>
            </li>
        </ul>
    </div>
    <div class="tab-content">
        <div class="tab-pane active fade show" id="myoverview_courses_view_in_progress">
            {{#inprogress}}
                {{< block_sayloroverview/courses-view-by-status }}
                    {{$id}}courses-view-in-progress{{/id}}
                    {{$status}}1{{/status}}
                    {{$pagingbarid}}pb-for-in-progress{{/pagingbarid}}
                    {{$pagingcontentid}}pc-for-in-progress{{/pagingcontentid}}
                {{/ block_sayloroverview/courses-view-by-status }}
            {{/inprogress}}
            {{^inprogress}}
                <div class="justify-content-center text-center mt-5">
                    <img class="empty-placeholder-image-lg"
                         src="{{urls.nocourses}}"
                         alt="{{#str}} nocoursesinprogress, block_sayloroverview {{/str}}"
                         role="presentation">
                    <p class="text-muted mt-3">{{#str}} nocoursesinprogress, block_myoverview {{/str}}</p>
                </div>
            {{/inprogress}}
        </div>
        <div class="tab-pane fade" id="myoverview_courses_view_past">
            {{#past}}
                {{< block_sayloroverview/courses-view-by-status }}
                    {{$id}}courses-view-past{{/id}}
                    {{$status}}0{{/status}}
                    {{$pagingbarid}}pb-for-past{{/pagingbarid}}
                    {{$pagingcontentid}}pc-for-in-progress{{/pagingcontentid}}
                {{/ block_sayloroverview/courses-view-by-status }}
            {{/past}}
            {{^past}}
                <div class="justify-content-center text-center mt-5">
                    <img class="empty-placeholder-image-lg"
                         src="{{urls.nocourses}}"
                         alt="{{#str}} nocoursespast, block_sayloroverview {{/str}}"
                         role="presentation">
                    <p class="text-muted mt-3">{{#str}} nocoursespast, block_sayloroverview {{/str}}</p>
                </div>
            {{/past}}
        </div>
    </div>
    {{/hascourses}}
    {{^hascourses}}
    <div class="justify-content-center text-center mt-5">
        <img class="empty-placeholder-image-lg"
             src="{{urls.nocourses}}"
             alt="{{#str}} nocourses, block_sayloroverview {{/str}}"
             role="presentation">
        <p class="text-muted mt-3">{{#str}} nocourses, block_sayloroverview {{/str}}</p>
    </div>
    {{/hascourses}}
</div>