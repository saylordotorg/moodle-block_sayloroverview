{{!
    @template block_sayloroverview/courses-view-course-item

    This template renders the course summary (view by courses) for the sayloroverview block.

    Example context (json):
    {
        "fullnamedisplay": "course 3",
        "viewurl": "https://www.google.com",
        "summary": "It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout."
    }
}}

<div class="well well-small">
    <div class="course-info-container" id="course-info-container-{{id}}">

        <div class="d-inline-flex container-fluid my-auto align-items-center">
            <div class="media container-fluid d-inline-flex flex-row flex-wrap justify-content-center justify-content-sm-between">
                <div class="media-left mr-3">
                    <div class="media-object m-1">
                        {{> block_sayloroverview/progress-chart}}
                    </div>
                </div>
                <div class="media-body my-auto">
                    <h3 class="h3"><a href="{{viewurl}}">{{{fullnamedisplay}}}</a></h4>
                </div>
                {{#certificate}}
                    <div class="media-right btn btn-secondary d-flex my-3 my-sm-auto ml-sm-3 align-items-center float-none float-sm-right">
                        <div class="text-center">
                            <a class="text-white" href="{{certificate}}">{{{viewcertificate}}}</a>
                        </div>
                    </div>
                {{/certificate}}
            </div>
        </div>
        <div class="text-muted mx-3 mt-2">
            {{#shortentext}} 840, {{{summary}}}{{/shortentext}}
        </div>
    </div>
</div>

