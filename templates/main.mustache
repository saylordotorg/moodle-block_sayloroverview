{{!
    @template block_sayloroverview/main

    This template renders the main content area for the sayloroverview block.

    Example context (json):
    {}
}}

<div id="block-sayloroverview-{{uniqid}}" class="block-sayloroverview" data-region="sayloroverview">
    <div class="tab-content content-centred">
        <div role="tabpanel" class="tab-pane fade {{#viewingcourses}}in active{{/viewingcourses}}" id="sayloroverview_courses_view">
            {{#coursesview}}
                {{> block_sayloroverview/courses-view }}
            {{/coursesview}}
        </div>
    </div>
</div>
{{#js}}
require(['jquery', 'block_sayloroverview/tab_preferences'], function($, TabPreferences) {
    var root = $('#block-sayloroverview-view-choices-{{uniqid}}');
    TabPreferences.registerEventListeners(root);
});
{{/js}}
